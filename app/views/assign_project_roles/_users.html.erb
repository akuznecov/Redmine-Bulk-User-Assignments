<h4>
  <%= link_to image_tag('toggle_check.png'), '#', {:class => 'toggle-link', :title => "#{l(:button_check_all)}" } %>
  <%= l(:label_user_plural) -%>
</h4>

<% @users.each do |user| -%>
  <div>
    <%= check_box_tag "users[]", user.id, false, :id => "users_#{user.id}" -%>
    <%= label_tag "users_#{user.id}", user.name -%>
  </div>
<% end %>
