<h4>
  <%= link_to image_tag('toggle_check.png'), '#', {:class => 'toggle-link', :title => "#{l(:button_check_all)}" } %>
  <%= l(:label_project_plural) -%>
</h4>

<% @projects.each do |project| -%>
  <div>
    <%= check_box_tag "projects[]", project.id -%>
    <%= label_tag "projects[]", project.name -%>
  </div>
<% end %>
