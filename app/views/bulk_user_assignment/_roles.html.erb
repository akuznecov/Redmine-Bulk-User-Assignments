<h4>
  <%= link_to image_tag('toggle_check.png'), '#', {:class => 'toggle-link', :title => "#{l(:button_check_all)}" } %>
  <%= l(:label_role_plural) -%>
</h4>

<% @roles.each do |role| -%>
  <div>
    <%= check_box_tag "roles[]", role.id -%>
    <%= label_tag "roles[]", role.name -%>
  </div>
<% end %>
